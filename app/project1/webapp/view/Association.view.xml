<mvc:View
    controllerName="app.project1.controller.Association"
    xmlns="sap.m"

    xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout"
  	xmlns:f="sap.f"
    xmlns:card="sap.f.cards"
    xmlns:w="sap.ui.integration.widgets"
    displayBlock="true"
    height="100%"
		xmlns:core="sap.ui.core"
>
    		<ScrollContainer height="100%" width="100%" vertical="true">
		<ToggleButton
			id="revealGrid"
			text="Reveal Grid"
			press="onRevealGrid"
			class="sapUiSmallMarginBegin sapUiSmallMarginTop sapUiTinyMarginBottom" />
			
				
                                       
                              
			
			
		<HBox renderType="Bare">
			<List
				id="list1"
				headerText="Associate Your Entities"
				class="sapUiSmallMargin"
				width="400px"
				items="{path: '/' }">
					<StandardListItem title="{name}" description="{ID}" info="created" iconInset="false"  infoState="Success" icon="sap-icon://hr-approval" 	infoStateInverted="true" />
			</List>

				
			<f:GridContainer
				id="grid1"
				class="sapUiSmallMargin"
				width="100%"
				snapToRow="true"
    items="{ path: '/'}">
 
  
			
				<f:layout>
					<f:GridContainerSettings rowSize="84px" columnSize="84px" gap="8px" />
				</f:layout>
				<f:layoutXS>
					<f:GridContainerSettings rowSize="70px" columnSize="70px" gap="8px" />
				</f:layoutXS>

				<f:Card>
					
					<f:layoutData>
					
						<f:GridContainerItemLayoutData minRows="1" columns="3" />
					</f:layoutData>
					<f:header>
						<card:Header title="{name}" />
					</f:header>
						<f:content>
			<List
				class="sapUiSmallMarginBottom"
				showSeparators="None"
				items="{
					path: '/'
				}">
				<CustomListItem>
					<HBox alignItems="Center" justifyContent="SpaceBetween">
						<VBox class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom" >
							<Title level="H3" text="{name}" />
							<Text text="{ID}" />
						</VBox>
						<ObjectStatus
							class="sapUiTinyMargin sapUiSmallMarginEnd"
							text="{name}"
							 />
					</HBox>
				</CustomListItem>
			</List>
		</f:content>
				</f:Card>
					

			</f:GridContainer>
		
		</HBox>
			<Label text="Association "  />
		<Input
			id="sourceInput"
			textFormatMode="KeyValue"
			placeholder="Source Entity"
			showSuggestion="true"
			showValueHelp="true"
			valueHelpRequest=".onValueHelpRequest"
			suggestionItems="{mainModel>/Entity}"
			suggestionItemSelected=".onSuggestionItemSelected">
			<suggestionItems>
				<core:ListItem
					text="{mainModel>name}"
				 />
			</suggestionItems>
		</Input>
			<Input
			id="targetInput"
			textFormatMode="KeyValue"
			placeholder="Target Entity"
			showSuggestion="true"
			showValueHelp="true"
			valueHelpRequest=".onValueHelpRequest1"
			suggestionItems="{mainModel>/Entity}"
			suggestionItemSelected=".onSuggestionItemSelected1">
			<suggestionItems>
				<core:ListItem
					text="{mainModel>name}"
				 />
			</suggestionItems>
		</Input>
		<HBox >
		
		  <ComboBox placeholder="Type"
			class="sapUiSmallMarginBottom"
			id="associationtype"
			items="{ path: 'AssociationType>/Type' }">
 			<core:ListItem key="{AssociationType>type}"
 			text="{AssociationType>type}" />
		</ComboBox>
		<Button
			id="association"
			text="association"
			press="onCreate"
			type="Default"
			icon="sap-icon://collaborate"
			 />
			
		</HBox>
		<Button
			id="aa"
			text="service"
			press="generateCDSModel"
			type="Default"
			icon="sap-icon://collaborate"
			 />
			 <Button
			id="cds"
			text="GenerateCds"
			press=".OnCdsgen"
			type="Default"
			 />
			  <Button
			id="append"
			text="append to file"
			press=".onAppendTextToFilePress"
			type="Default"
			 />

		


	</ScrollContainer>
</mvc:View>