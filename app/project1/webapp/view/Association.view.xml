<mvc:View
    controllerName="app.project1.controller.Association"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:f="sap.f"
    xmlns:card="sap.f.cards"
    xmlns:w="sap.ui.integration.widgets"
    displayBlock="true"
    height="100%"
>
    <ScrollContainer
        height="100%"
        width="100%"
        vertical="true"
    >
        <ToggleButton
            id="revealGrid"
            text="Reveal Grid"
            press="onRevealGrid"
            class="sapUiSmallMarginBegin sapUiSmallMarginTop sapUiTinyMarginBottom"
        />

        <f:GridContainer
            id="grid1"
            class="sapUiSmallMargin"
            snapToRow="true"
        >
            <f:Card
                class="sapUiMediumMargin"
                width="300px"
            >
                <f:header>
                    <card:Header
                        title="Project Cloud Transformation"
                        subtitle="Revenue per Product | EUR"
                    />
                </f:header>
                <f:content>
                    <List
                        showSeparators="None"
                        items="{path: 'mainModel>/Entity'}"
                    >
                        <CustomListItem>
                            <HBox
                                alignItems="Center"
                                justifyContent="SpaceBetween"
                            >
                                <VBox
                                    class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom"
                                >
                                    <Title
                                        level="H3"
                                        text="{mainModel>ID}"
                                    />
                                    <Text text="{mainModel>name}" />
                                </VBox>
                            </HBox>
                        </CustomListItem>
                    </List>
                </f:content>
            </f:Card>
            <f:layout>
                <f:GridContainerSettings
                    rowSize="84px"
                    columnSize="84px"
                    gap="8px"
                />
            </f:layout>
            <f:layoutXS>
                <f:GridContainerSettings
                    rowSize="70px"
                    columnSize="70px"
                    gap="8px"
                />
            </f:layoutXS>


          

           

          

           

          

          

            

        </f:GridContainer>
    </ScrollContainer>
</mvc:View>
