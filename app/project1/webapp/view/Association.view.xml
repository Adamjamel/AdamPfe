<mvc:View
    controllerName="app.project1.controller.Association"
    xmlns="sap.m"

    xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout"
  	xmlns:f="sap.f"
    xmlns:card="sap.f.cards"
    xmlns:w="sap.ui.integration.widgets"
    displayBlock="true"
    height="100%"
		xmlns:core="sap.ui.core">
		<Page> 
    		<ScrollContainer height="100%" width="100%" vertical="true">
		<HBox renderType="Bare">
			<List
				id="list1"
				headerText="Service"
				class="sapUiSmallMargin"
				width="200px"
				items="{path: '/' }">
					<StandardListItem title="{name}" description="{ID}" info="created" iconInset="false"  infoState="Success" icon="sap-icon://hr-approval" 	infoStateInverted="true" />
			</List>

				
			<f:GridContainer
				id="grid1"
				class="sapUiSmallMargin"
				width="100%"
				snapToRow="true"
    items="{ path: '/'}">
 
  
			
				<f:layout>
					<f:GridContainerSettings rowSize="84px" columnSize="84px" gap="8px" />
				</f:layout>
				<f:layoutXS>
					<f:GridContainerSettings rowSize="70px" columnSize="70px" gap="8px" />
				</f:layoutXS>

				<f:Card>
					
					<f:layoutData>
					
						<f:GridContainerItemLayoutData minRows="1" columns="3" />
					</f:layoutData>
					<f:header>
						<card:Header title="{name}" />
					</f:header>
						<f:content>
			<List
				class="sapUiSmallMarginBottom"
				showSeparators="None"
				items="{
					path: '/'
				}">
				<CustomListItem>
					<HBox alignItems="Center" justifyContent="SpaceBetween">
						<VBox class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom" >
							<Title level="H3" text="{name}" />
							<Text text="{ID}" />
						</VBox>
						<ObjectStatus
							class="sapUiTinyMargin sapUiSmallMarginEnd"
							text="{name}"
							 />
					</HBox>
				</CustomListItem>
			</List>
		</f:content>
				</f:Card>
					

			</f:GridContainer>
		
		</HBox>
			
			
	
		


	</ScrollContainer>
		<footer>
			<OverflowToolbar id="otbFooter">
				<ToolbarSpacer/>
					<Button
			id="aa"
			text="GenenrateService"
			press="generateCDSModel"
			type="Accept"
			icon="sap-icon://collaborate"
			 />
			 <Button
			id="cds"
			text="GenerateCds"
			press=".OnCdsgen"
			type="Accept"
			 />
			

			
				
				

			</OverflowToolbar>
		</footer>
	</Page>
	

</mvc:View>