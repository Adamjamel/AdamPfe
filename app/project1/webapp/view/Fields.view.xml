        <headerTitle>
            <ObjectPageDynamicHeaderTitle>
                <expandedHeading />
                <navigationActions>
                    <m:OverflowToolbarButton
                        type="Transparent"
                        icon="sap-icon://decline"
                        press="handleClose"
                        tooltip="Close middle column"
                        visible="true"
                    />
                </navigationActions>

                <actions>
                    <m:ToggleButton
                        text="Edit"
                        type="Emphasized"
                        press=".onEditToggleButtonPress"
                    />
                    <m:Button
                        text="Delete"
                        type="Transparent"
                    />
                    <m:Button
                        text="Copy"
                        type="Transparent"
                    />
                    <m:Button
                        icon="sap-icon://action"
                        type="Transparent"
                    />
                </actions>
            </ObjectPageDynamicHeaderTitle>
        </headerTitle>

