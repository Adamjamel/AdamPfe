                    justifyContent="Center"
                    class="sapUiSmallMarginEnd"
                    items=""
                >
                    <form:SimpleForm
                        maxContainerCols="2"
                        editable="false"
                        layout="ResponsiveGridLayout"
                        labelSpanL="12"
                        labelSpanM="12"
                        emptySpanL="0"
                        emptySpanM="0"
                        columnsL="1"
                        columnsM="1"
                    >
                        <form:content>
                            <m:Title
                                text="{mainModel>name}"
                                wrapping="true"
                            />
                            <m:Label text="Entity ID" />
                            <m:Text
                                id="fldd"
                                text="{mainModel>ID}"
                            />
                            <m:Label text="Entity Name" />
                            <m:Text text="{mainModel>name}" />
                        </form:content>
                    </form:SimpleForm>
                </m:VBox>
            </m:HBox>
        </headerContent>
